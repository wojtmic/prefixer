{
    description: "Force mouse capture in fullscreen (Fixes multi-monitor drift)",
    tasks: [
        {
            description: "Enable X11 GrabFullscreen",
            type: "regedit",
            path: "HKEY_CURRENT_USER\\Software\\Wine\\X11 Driver",
            values: {
                GrabFullscreen: "Y",
            },
        },
        {
            description: "Enable DXGrab (DirectInput)",
            type: "regedit",
            path: "HKEY_CURRENT_USER\\Software\\Wine\\DirectInput",
            values: {
                UseNative: "N",
            },
        },
    ],
}