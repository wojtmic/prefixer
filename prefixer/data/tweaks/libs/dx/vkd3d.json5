{
  description: "VKD3D-Proton (Vulkan-based DirectX 12 translation layer)",
  tasks: [
    {
      description: "Download VKD3D-Proton",
      type: "download",
      url: "https://github.com/HansKristian-Work/vkd3d-proton/releases/download/v2.13/vkd3d-proton-2.13.tar.zst",
      checksum: "f7163187a69e19b7c57d4e2f10ed627e75d6e93eef52d119378572d26a9ce33a",
      filename: "vkd3d.tar.zst"
    },
    {
      description: "Extract VKD3D",
      type: "run_exe",
      path: "tar",
      args: ["--zstd", "-xf", "<tempdir>/vkd3d.tar.zst", "-C", "<tempdir>"]
    },
    {
      description: "Copy x64 DLLs to system32",
      type: "copy",
      path: "<tempdir>/vkd3d-proton-2.13/x64",
      new_path: "<pfxdir>/drive_c/windows/system32"
    },
    {
      description: "Copy x86 DLLs to syswow64",
      type: "copy",
      path: "<tempdir>/vkd3d-proton-2.13/x86",
      new_path: "<pfxdir>/drive_c/windows/syswow64"
    },
    {
      description: "Set DLL overrides",
      type: "regedit",
      path: "Software\\Wine\\DllOverrides",
      filename: 'user.reg',
      values: {
        d3d12: "native",
        d3d12core: "native"
      }
    }
  ]
}
