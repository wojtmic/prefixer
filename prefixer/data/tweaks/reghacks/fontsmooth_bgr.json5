{
  description: "Font Smoothing - BGR Subpixel",
  tasks: [
    {
      description: "Enable BGR font smoothing",
      type: "regedit",
      path: "Control Panel\\Desktop",
      filename: 'user.reg',
      values: {
        FontSmoothing: "2",
        FontSmoothingType: "dword:2",
        FontSmoothingGamma: "dword:578",
        FontSmoothingOrientation: "dword:0"
      }
    }
  ]
}
