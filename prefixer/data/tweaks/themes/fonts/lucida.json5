{
  description: "Lucida Console Font (debug logs and terminal UIs)",
  tasks: [
    {
      description: "Set font substitution for Lucida Console",
      type: "regedit",
      path: "Software\\Microsoft\\Windows NT\\CurrentVersion\\FontSubstitutes",
      filename: 'system.reg',
      values: {
        "Lucida Console": "Liberation Mono"
      }
    },
    {
      description: "Info about Lucida",
      type: "message",
      content: "Lucida Console mapped to Liberation Mono. For better results, install ttf-liberation on your system."
    }
  ]
}
