{
    description: "Microsoft Core Fonts with font smoothing and DPI fix",
    tasks: [
        {
            description: "Install Microsoft Core Fonts",
            type: "tweak",
            name: "themes.fonts.core"
        },
        {
            description: "Enable font smoothing (ClearType)",
            type: "tweak",
            name: "reghacks.fontsmooth_rgb"
        },
        {
            description: "Set screen DPI to 120 (125% scaling)",
            type: "regedit",
            path: "Control Panel\\Desktop",
            filename: 'user.reg',
            values: {
                LogPixels: 120,
            },
        },
    ],
}