{
    description: "Reset theme colors to default",
    tasks: [
        {
            description: "Reset Windows theme settings",
            type: "regedit",
            path: "Software\\Microsoft\\Windows\\CurrentVersion\\Themes",
            filename: 'user.reg',
            values: {
                ThemeActive: "1",
                InstallVisualStyle: "%ResourceDir%\\themes\\Light\\Light.msstyles",
            },
        },
        {
            description: "Reset theme manager settings",
            type: "regedit",
            path: "Software\\Microsoft\\Windows\\CurrentVersion\\ThemeManager",
            filename: 'user.reg',
            values: {
                ThemeActive: "0",
                DllName: "",
                ColorName: "",
                SizeName: "",
            },
        },
        {
            description: "Remove custom theme colors",
            type: "regedit",
            path: "Control Panel\\Colors",
            filename: 'user.reg',
            values: {
                ActiveBorder: null,
                ActiveTitle: null,
                AppWorkSpace: null,
                Background: null,
                ButtonAlternativeFace: null,
                ButtonDkShadow: null,
                ButtonFace: null,
                ButtonHilight: null,
                ButtonLight: null,
                ButtonShadow: null,
                ButtonText: null,
                GradientActiveTitle: null,
                GradientInactiveTitle: null,
                GrayText: null,
                Hilight: null,
                HilightText: null,
                InactiveBorder: null,
                InactiveTitle: null,
                InactiveTitleText: null,
                InfoText: null,
                InfoWindow: null,
                Menu: null,
                MenuBar: null,
                MenuHilight: null,
                MenuText: null,
                Scrollbar: null,
                TitleText: null,
                Window: null,
                WindowFrame: null,
                WindowText: null,
            },
        },
    ],
}