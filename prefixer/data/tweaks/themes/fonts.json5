{
    description: "Microsoft Core Fonts with font smoothing and DPI fix",
    tasks: [
        {
            description: "Enable font smoothing (ClearType)",
            type: "regedit",
            path: "HKEY_CURRENT_USER\\Control Panel\\Desktop",
            values: {
                FontSmoothing: "2",
                FontSmoothingGamma: 1400,
                FontSmoothingOrientation: 1,
                FontSmoothingType: 2,
            },
        },
        {
            description: "Set screen DPI to 120 (125% scaling)",
            type: "regedit",
            path: "HKEY_CURRENT_USER\\Control Panel\\Desktop",
            values: {
                LogPixels: 120,
            },
        },
    ],
}